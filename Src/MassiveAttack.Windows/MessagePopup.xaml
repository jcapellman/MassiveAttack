<Window x:Class="MassiveAttack.Windows.MessagePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MassiveAttack.Windows"
        mc:Ignorable="d"
        Title="MessagePopup" Height="200" Width="300" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Style="{StaticResource MessagePopup}">
        <TextBlock Text="{Binding MessageContent}" Style="{StaticResource MessagePopupText}"  />
        <Button Style="{StaticResource MainButton}" Content="Ok" VerticalAlignment="Bottom" />
    </Grid>
</Window>
